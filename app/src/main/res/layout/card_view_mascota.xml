<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginBottom="@dimen/padding_Bottom"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cvImgMascota"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drw_orton"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibRanking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_pescado1">
            </ImageButton>
            <TextView
                android:id="@+id/cvTvRanking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:text="@string/tv_ranking">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cvTvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_nombre"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>